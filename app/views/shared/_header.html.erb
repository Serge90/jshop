<div id="menu-box">
  <ul class="box">
    <li><%= image_tag 'logo.png' %></li>
    <li class="indicator">
        <ul>
          <li><%= t('free_gift_wrapping') %></li>
          <li><%= t('all_goods_in_stock') %></li>
          <li><%= t('the_possibility_of_buying_on_credit') %></li>
        </ul>
    </li>

    <li class="basket">
        <%= render :partial => 'orders/ajax_cart', :locals => {:order => current_order(true) } %>
        <div id="wish"><b><%= t('wishes') %></b><br /><%= link_to t("wishlists"), default_wishlist_path %></div>
