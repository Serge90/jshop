              <% links = {
                        :free_gift_wrapping => "#",
                        :all_goods_in_stock => "#",
                        :the_possibility_of_buying_on_credit => "#",
                        :free_gift_wrap => "#",
                        :all_goods_are_in_stock => "#",
                        :the_possibility_of_buying_on_credit => "#",
                        :cozy_outlets_and_fittings => "#",
                        :constant_updating_of_range => "#",
                        :free_shipping => "#",
                        :convenient_and_secure_payment => "#",
                        :the_system_of_bonuses_and_discounts => "#",
                        :back_guarantee => "#"
              } %>
              <%= header_menu_creator(links) %>
            </ul>
