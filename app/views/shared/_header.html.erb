            <div class="twitter"><%= link_to '', '#' %></div>
            <div class="rss"><%= link_to '', '#' %></div>
            <div class="facebook"><%= link_to '', '#' %></div>
            <div class="faq"><%= link_to '', '#' %></div>
        </div>
    </li>
  </ul>
</div>

<div id="middle-menu">
