<%= form_for(:user, :url => user_session_path) do |f| %>
<table cellpadding="0" cellspacing="0" border="0" align="center" class="infoBox_">
  <tr>
    <td class="infoBox__">
      <table border="0" width="100%" height="100%" cellspacing="5" cellpadding="0" style="height:240px;">
	<tr>
	  <td>
	    <img src="images/pixel_trans.gif" border="0" alt="" width="100%" height="10">
	  </td>
	</tr>
        <tr>
	  <td class="main" colspan="2">
	    <%= 'i_am' %>
	  </td>
	</tr>
	<tr>
	  <td>
	    <img src="images/pixel_trans.gif" border="0" alt="" width="100%" height="10">
	  </td>
	</tr>
	<tr>
	  <td class="main">
	    <b>
	      <%= f.label(:email, t("email")) %>
	    </b>
	  </td>
	</tr>
	<tr>
	  <td class="main width3_100">
	    <%= f.text_field('email', :class => 'title') %>
	  </td>
	</tr>
	<tr>
	  <td class="main">
	    <b>
	      <%= f.label :password, t("password") %>
	    </b>
	  </td>
	</tr>
	<tr>
	  <td class="main width3_100">
	    <%= f.password_field 'password', :class => 'title' %>
	  </td>
	</tr>
<!--Remember me-->
	<tr>
	  <td class="main width3_100">
	    <%= f.check_box :remember_me %>
      	    <%= f.label :remember_me, t('remember_me') %>
	  </td>
	</tr>
<!--Remember me end-->
	<tr>
	  <td colspan="2">
	    <img src="images/pixel_trans.gif" border="0" alt="" width="100%" height="10">
	  </td>
	</tr>
	<tr>
	  <td class="smallText">
	    <%= link_to t("forgotten"), new_user_password_path %>
	  </td>
	</tr>
	<tr>
	  <td height="100%">
	    <img src="images/pixel_trans.gif" border="0" alt="" width="100%" height="10">
	  </td>
	</tr>
	<tr>
	  <td>
	    <table border="0" width="100%" cellspacing="0" cellpadding="2">
	      <tr>
		<td width="10">
		  <img src="images/pixel_trans.gif" border="0" alt="" width="10" height="1">
		</td>
		<td align="right">
		  <%= image_submit_tag t("login"), :title => 'Sign In', :alt => 'Sign In', :class=> "submit_button" %>
		</td>
		<td width="10">
		  <img src="images/pixel_trans.gif" border="0" alt="" width="10" height="1">
		</td>
	      </tr>
	    </table>
	  </td>
	</tr>
      </table>				
    </td>
  </tr>
</table>
<% end %>
