<%# provisional snapshot of review info %>
<div id="reviews">
  <%= render :partial => 'shared/rating', :locals => {:product => @product, :review => 0} %>
  <% for review in @product.reviews.approval_filter.preview %>
    <%= render :partial => 'shared/review', :locals => {:review => review} %>
  <% end %>
  <span class="link2">
  <%= link_to t('write_your_own_review'), new_product_review_path(@product) %></span>
</div>

