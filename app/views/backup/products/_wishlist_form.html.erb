<% if current_user %>
	<div id="wishlist-form">
	  <% form_for WishedProduct.new, :html => {:method => :get} do |f| %>
	    <%= f.hidden_field :variant_id, :value => @product.master.id %>
	    <%= submit_tag t("add_to_wishlist"), :class => 'submit_button' %>
	  <% end %>
	  <%= javascript_include_tag 'wishlist' %>
	</div>
<% end %>
