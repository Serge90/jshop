<% content_for :sidebar do %>
  <%= hook :taxon_sidebar_navigation do %>
    <%= render :partial => "shared/taxonomies" %>
  <% end %>
<% end %>

<div id='box_produkt'>
  <div id='box_left'>
    <div class="galery">
      <%= hook :product_images do %>
        <div id="main-image">
          <%= render 'image' %>
        </div>
        <div class="dotted_horizontal_separator"></div>
        <div id="thumbnails">
          <%= render 'thumbnails', :product => @product %>
        </div>
      <% end %>
    </div>
    <div class="clear"></div>
    <%= render 'properties' %>
  </div>
  <div id='box_right'>
    <h4><%= @product.name %></h4>
    <div class="raiting">
      <%= ratings_for @product %>
      <%# render :partial => 'shared/rating', :locals =>{:product => @product} %>
      <!--<div class="art">Арт: 1-211</div>-->
    </div>
    <p>
      <%= hook :product_description do %>
        <%= product_description(@product) rescue t("product_has_no_description") %>
      <% end %>
    </p>
    <div class="social_blok">
      <%# render :partial => "shared/social_sharing" %>
    </div>
    <div class="preferenses">
      <div class="pric_red">
        <%= product_price(@product) %>
      </div>
      <ul>
        <li><%= image_tag 'icon.png', :width => 24, :height => 24 %></li>
        <li><%= image_tag 'icon.png', :width => 24, :height => 24 %></li>
        <li><%= image_tag 'icon.png', :width => 24, :height => 24 %></li>
      </ul>
    </div>
    <div class="size">
      <%= hook :cart_form do %>
        <%= render 'cart_form' %>
      <% end %>
    </div>
  </div>
  <div id='box_center'>
    <%= render :partial => "taxons" %>
    <%= render :partial => "shared/comments/comments" %>

  </div>
</div>

