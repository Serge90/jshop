<% unless @product_properties.empty? %>
<%= t('features') %>
<table id="product-properties" class="harakter" cellpadding="0" cellspacing="0">
    <% for product_property in @product_properties %>
      <tr>
        <td>
          <%= product_property.property.presentation %>
        </td>
        <td>
          <%= product_property.value %>
        </td>
      <tr>
    <% end %>
</table>
<% end %>
